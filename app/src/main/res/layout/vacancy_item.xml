<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/margin8"
        android:background="@drawable/logo_company_background"
        android:foreground="@drawable/logo_company_foreground"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/Medium_22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin12"
            android:layout_marginTop="@dimen/margin6"
            tools:text="Title" />

        <TextView
            android:id="@+id/tvCompany"
            style="@style/Regular_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin12"
            android:layout_marginTop="@dimen/margin2"
            tools:text="Company" />

        <TextView
            android:id="@+id/tvSalary"
            style="@style/Regular_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin12"
            android:layout_marginTop="@dimen/margin2"
            android:layout_marginBottom="@dimen/margin12"
            tools:text="Salary" />
    </LinearLayout>

</LinearLayout>
