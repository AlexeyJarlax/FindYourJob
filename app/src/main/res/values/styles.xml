<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Bold_32">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">@integer/weight_700</item>
    </style>

    <style name="Medium_22">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">@integer/weight_500</item>
    </style>

    <style name="Medium_16">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">@integer/weight_500</item>
    </style>

    <style name="Medium_16_Filter_Btns" parent="Medium_16">
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowColor">@null</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0.00</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="Regular_16">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">@integer/weight_400</item>
    </style>

    <style name="Regular_16_Filter_Btns" parent="Regular_16">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowColor">@null</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0.00</item>
    </style>

    <style name="Regular_12">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">@integer/weight_400</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="Regular_16.TextInputEditTextLocation">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Regular_12.BottomNavigationText">
        <item name="itemTextAppearanceActive">@color/blue</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTint">@color/blue</item>
    </style>

    <style name="Regular_16.EditText">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">?attr/hint_text_c</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>
</resources>
