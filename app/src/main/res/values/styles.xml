<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Bold_32">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">@integer/weight_700</item>
    </style>

    <style name="Medium_22">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">@integer/weight_500</item>
    </style>

    <style name="Medium_16">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">@integer/weight_500</item>
    </style>

    <style name="Regular_16">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">@integer/weight_400</item>
    </style>

    <style name="Regular_12">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">@integer/weight_400</item>
    </style>

    <style name="Medium_16.Blue_button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:layout_marginHorizontal">@dimen/margin16</item>
    </style>

    <style name="Regular_12.BottomNavigationText">
        <item name="itemTextAppearanceActive">@color/blue</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTint">@color/blue</item>
    </style>
</resources>
